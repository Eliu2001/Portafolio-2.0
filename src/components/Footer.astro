---
import { Github, Linkedin, Heart } from 'lucide-react';
---

<footer class="py-12 px-4 border-t border-gray-800">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col items-center gap-6">
      <!-- Social Icons -->
      <div class="flex gap-6">
        <a
          href="https://github.com/Eliu2001"
          target="_blank"
          rel="noopener noreferrer"
          class="p-3 bg-gray-900 rounded-full hover:bg-gray-800 transition-colors group"
          aria-label="GitHub"
        >
          <Github className="w-6 h-6 group-hover:scale-110 transition-transform" />
        </a>
        <a
          href="https://www.linkedin.com/in/gsepulvedav/"
          target="_blank"
          rel="noopener noreferrer"
          class="p-3 bg-gray-900 rounded-full hover:bg-gray-800 transition-colors group"
          aria-label="LinkedIn"
        >
          <Linkedin className="w-6 h-6 group-hover:scale-110 transition-transform" />
        </a>
      </div>

      <!-- Copyright -->
      <div class="text-center text-gray-400">
        <p class="flex items-center gap-2 justify-center">
          © {new Date().getFullYear()} Germain Sepúlveda — Hecho con
          <Heart className="w-4 h-4 text-red-500 inline-block animate-pulse" />
          y mucho mate
        </p>
      </div>

      <!-- Quick Links -->
      <div class="flex gap-8 text-sm text-gray-500">
        <a href="#hero" class="hover:text-indigo-400 transition-colors">
          Inicio
        </a>
        <a href="#about" class="hover:text-indigo-400 transition-colors">
          Sobre mí
        </a>
        <a href="#skills" class="hover:text-indigo-400 transition-colors">
          Habilidades
        </a>
        <a href="#projects" class="hover:text-indigo-400 transition-colors">
          Proyectos
        </a>
        <a href="#contact" class="hover:text-indigo-400 transition-colors">
          Contacto
        </a>
      </div>
    </div>
  </div>
</footer>
